<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.whoopeelab.products.ProductDetailActivity">

    <ImageView
        android:id="@+id/img_prod_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="2"
        android:layout_below="@id/img_prod_detail">

        <TextView
            android:id="@+id/prod_name"
            android:text="@string/product_name"
            android:textSize="20sp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/edit_name"
            android:ems="10"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/prod_desc"
            android:text="@string/product_desc"
            android:textSize="20sp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/edit_desc"
            android:ems="10"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/prod_price"
            android:text="@string/product_price"
            android:textSize="20sp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/edit_price"
            android:ems="10"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/prod_sale_price"
            android:text="@string/product_sale_price"
            android:textSize="20sp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/edit_sale_price"
            android:ems="10"
            android:padding="5dp"/>
    </GridLayout>

</RelativeLayout>
